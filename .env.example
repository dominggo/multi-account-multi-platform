# Multi-Account Messaging Platform - Root Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=messaging_platform
DB_USER=msgplatform
DB_PASSWORD=your_secure_password_here

# =============================================================================
# TELEGRAM API (Get from https://my.telegram.org)
# =============================================================================
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
API_SECRET_KEY=your_api_secret_here

# =============================================================================
# SERVICE PORTS
# =============================================================================
API_GATEWAY_PORT=3000
TELEGRAM_BACKEND_PORT=8001
WHATSAPP_BACKEND_PORT=8002
FRONTEND_PORT=5173

# =============================================================================
# CORS & ORIGINS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# KEEP-ALIVE CONFIGURATION
# =============================================================================
DEFAULT_KEEPALIVE_INTERVAL=86400
